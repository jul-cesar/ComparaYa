<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ComparaYa.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Background="#F5F5F4"
    NavigationPage.HasNavigationBar="False">

    <StackLayout
        Padding="40"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center">
        <Image
            Margin="0,0,0,60"
            Aspect="AspectFit"
            HeightRequest="100"
            Source="xd.png"
            WidthRequest="100" />
        <Label
            Margin="20"
            FontFamily="PPI"
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="Iniciar sesion"
            TextColor="Black" />

        <Entry
            x:Name="email"
            Margin="10"
            Placeholder="email"
            PlaceholderColor="Gray"
            TextColor="Black" />
        <Entry
            x:Name="passw"
            Margin="10"
            IsPassword="True"
            Placeholder="Contraseña"
            PlaceholderColor="Gray"
            TextColor="Black" />
        <Button
            Margin="20"
            Padding="10"
            BackgroundColor="#4caf50"
            Clicked="LogIn"
            CornerRadius="50"
            Text="Ingresar"
            TextColor="White"
            VerticalOptions="Center" />
        <StackLayout
            HorizontalOptions="Center"
            Orientation="Horizontal"
            Spacing="5"
            VerticalOptions="Center">
            <Label Text="¿No tienes una cuenta?" TextColor="#9e9e9e" />
            <Label
                x:Name="registrarteLabel"
                Text="Registrarte"
                TextColor="#4caf50"
                TextDecorations="Underline" />
        </StackLayout>



    </StackLayout>

</ContentPage>